{
  "name": "matugen-vscode",
  "displayName": "Illogical Impulse Theme",
  "description": "Applies your material you palette from Matugen to VS Code.",
  "version": "1.0.0",
  "publisher": "Matugen",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": [
    "Themes"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "matugen.applyPalette",
        "title": "Matugen: Apply/Reload Palette"
      },
      {
        "command": "matugen.removePalette",
        "title": "Matugen: Reset Color Customizations"
      }
    ],
    "configuration": {
      "title": "Matugen",
      "properties": {
        "matugen.palettePath": {
          "type": "string",
          "default": "~/.local/state/quickshell/user/generated/colors.json",
          "description": "Path to the Matugen JSON palette file. The extension will watch this file for changes."
        },
        "matugen.debounceMs": {
          "type": "number",
          "default": 300,
          "description": "Debounce time in milliseconds for reloading the palette after a file change."
        }
      }
    },
    "themes": [
      {
        "label": "Illogical Impulse Theme",
        "uiTheme": "vs-dark",
        "path": "./themes/matugen-theme.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "@types/node": "18.x",
    "typescript": "^4.9.5"
  }
}